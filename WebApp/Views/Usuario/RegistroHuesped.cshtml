<link rel="stylesheet" href="~/css/Huesped/Registro.css" asp-append-version="true" />

@model Obligatorio1.Huesped
<h1>Registrarse</h1>
<h4>Como Huesped</h4>
<hr />
<div class="row mx-auto">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">

                <label class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />

                <label class="control-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />

                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />

                <label class="control-label">Contraseña</label>
                <input asp-for="Contrasenia" class="form-control" />

                <label for="tipoDoc">Tipo Documento</label>
                <select asp-for="TipoDocumento" class="form-control" id="tipoDoc">
                    <option value="CI">CI</option>
                    <option value="PASAPORTE">PASSAPORTE</option>
                </select>

                <label class="control-label">Numero de documento</label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <label class="control-label">Numero de habitación</label>
                <input type="number" asp-for="Habitacion" class="form-control" id="nroHabitacion" />

                <label for="fechaNac">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" id="fechanac" class="form-control" type="date" />
                <span id="Fecha"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn btn-primary" />
            </div>
        </form>
        <p>@ViewBag.msgRegistro</p>
    </div>
</div>
